.button
  display inline-block
  height 34px
  font-weight 400
  line-height 1.25
  text-align center
  white-space nowrap
  vertical-align middle
  user-select none
  border 1px solid transparent
  padding .4rem .75rem
  font-size 1rem
  border-radius .25rem
  transition all .2s ease-in-out

  &--success
    color #fff
    background-color #62bf6e
