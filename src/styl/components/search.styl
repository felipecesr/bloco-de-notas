.search
  position relative
  background-color #f1f5f8
  padding 8px 16px
  min-height 44px
  border-bottom 1px solid #d6d9dc

  &__input
    width 100%
    height 32px
    padding 7px 10px
    border-radius 3px
    border 1px solid #bbc0c4
    font-size .9em
    color #3b4045
    box-shadow inset 0 1px 3px #eff0f1
    background #FFF
    appearance none

  &__button
    position absolute
    top 50%
    right 25px
    transform translateY(-50%)
