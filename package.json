{
  "name": "bloco-de-notas",
  "version": "0.1.0",
  "description": "",
  "main": ".eslintrc.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/js/**/*.js",
    "prepush": "npm run lint",
    "stylus": "mkdir dist/css; stylus src/styl/app.styl -o dist/css/app.css",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "icons": "mkdir dist/img; svgo -f src/img/icons && svg-sprite-generate -d src/img/icons -o dist/img/icons.svg",
    "serve": "browser-sync start --server \"dist\" --files \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:css": "npm run stylus -- --compress && npm run autoprefixer",
    "build:js": "./node_modules/.bin/webpack --colors --progress",
    "watch:css": "npm run stylus -- -w",
    "watch:js": "npm run build:js -- --watch",
    "watch": "parallelshell \"npm run serve\" \"npm run watch:css\" \"npm run watch:js\""
  },
  "author": "Felipe Cesar <felipecesr@gmail.com> (http://felipecesar.com.br/)",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015-native-modules": "^6.9.4",
    "browser-sync": "^2.18.13",
    "eslint": "^4.4.1",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "husky": "^0.14.3",
    "parallelshell": "^3.0.1",
    "postcss-cli": "^4.1.0",
    "stylus": "^0.54.5",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.7.2",
    "webpack": "^3.5.2"
  }
}
